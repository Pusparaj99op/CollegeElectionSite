<%- contentFor('body') %>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-0 shadow-lg">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">Email Verification</h3>
            </div>
            <div class="card-body p-4">
                <div class="text-center mb-4">
                    <i class="fas fa-envelope-open-text fa-4x text-primary mb-3"></i>
                    <h4>Verify Your Email Address</h4>
                    <p>
                        We've sent a verification link to your email address.
                        Please check your inbox and click on the link to verify your account.
                    </p>
                </div>
                
                <div class="alert alert-info">
                    <i class="fas fa-info-circle me-2"></i> 
                    If you don't see the email in your inbox, please check your spam folder.
                </div>
                
                <hr class="my-4">
                
                <h5>Didn't receive the verification email?</h5>
                <form action="/auth/resend-verification" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email Address</label>
                        <input type="email" class="form-control" id="email" name="email" required placeholder="Enter your email address">
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Resend Verification Email</button>
                    </div>
                </form>
                
                <div class="mt-4 text-center">
                    <p>
                        <a href="/auth/login">Return to Login</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
