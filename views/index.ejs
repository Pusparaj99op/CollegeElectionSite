<%- contentFor('body') %>

<!-- Hero Section -->
<div class="hero-section">
    <div class="container">
        <div class="row align-items-center min-vh-75">
            <div class="col-lg-6">
                <div class="hero-content">
                    <h1 class="display-4 fw-bold text-gradient mb-4">
                        Modern College Election System
                    </h1>
                    <p class="lead mb-4 text-muted">
                        Experience democracy in the digital age with our secure, transparent, and user-friendly election platform designed specifically for educational institutions.
                    </p>
                    <div class="hero-actions mb-4">
                        <% if (user) { %>
                            <% if (user.role === 'admin') { %>
                                <a href="/admin/dashboard" class="btn btn-primary btn-lg me-3">
                                    <i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard
                                </a>
                            <% } else if (user.role === 'teacher') { %>
                                <a href="/teacher/dashboard" class="btn btn-primary btn-lg me-3">
                                    <i class="fas fa-chalkboard-teacher me-2"></i>Teacher Dashboard
                                </a>
                            <% } else { %>
                                <a href="/student/dashboard" class="btn btn-primary btn-lg me-3">
                                    <i class="fas fa-user-graduate me-2"></i>Student Dashboard
                                </a>
                            <% } %>
                            <a href="/election" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-vote-yea me-2"></i>View Elections
                            </a>
                        <% } else { %>
                            <a href="/auth/register" class="btn btn-primary btn-lg me-3">
                                <i class="fas fa-user-plus me-2"></i>Get Started
                            </a>
                            <a href="/auth/login" class="btn btn-outline-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>Sign In
                            </a>
                        <% } %>
                    </div>
                    <div class="hero-stats d-flex flex-wrap gap-4">
                        <div class="stat-item">
                            <div class="stat-number">1000+</div>
                            <div class="stat-label">Students</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">50+</div>
                            <div class="stat-label">Elections</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number">99.9%</div>
                            <div class="stat-label">Uptime</div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image text-center">
                    <div class="image-container">
                        <img src="/images/logo.png" alt="College Election System" class="img-fluid hero-logo bounce-in" loading="eager">
                        <div class="floating-elements">
                            <div class="floating-element element-1">
                                <i class="fas fa-vote-yea"></i>
                            </div>
                            <div class="floating-element element-2">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <div class="floating-element element-3">
                                <i class="fas fa-chart-line"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<section class="features-section py-5">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-lg-8 text-center">
                <h2 class="display-5 fw-bold mb-3">Why Choose Our Platform?</h2>
                <p class="lead text-muted">Built with modern technology and security best practices to ensure fair and transparent elections.</p>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-lg-4 col-md-6">
                <div class="feature-card card h-100 border-0 shadow-custom">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-gradient-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-vote-yea fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Easy Voting</h5>
                        <p class="card-text text-muted">Intuitive interface makes voting simple and accessible for all students, regardless of technical expertise.</p>
                        <div class="feature-benefits">
                            <small class="text-primary">
                                <i class="fas fa-check me-1"></i>One-click voting
                                <i class="fas fa-check me-1 ms-3"></i>Mobile friendly
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card card h-100 border-0 shadow-custom">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-gradient-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-shield-alt fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Bank-Level Security</h5>
                        <p class="card-text text-muted">Advanced encryption and multi-factor authentication ensure your vote remains private and secure.</p>
                        <div class="feature-benefits">
                            <small class="text-success">
                                <i class="fas fa-check me-1"></i>256-bit encryption
                                <i class="fas fa-check me-1 ms-3"></i>Audit trails
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card card h-100 border-0 shadow-custom">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-gradient-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-chart-pie fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Real-time Analytics</h5>
                        <p class="card-text text-muted">Live election results with comprehensive analytics and detailed reporting for transparency.</p>
                        <div class="feature-benefits">
                            <small class="text-info">
                                <i class="fas fa-check me-1"></i>Live updates
                                <i class="fas fa-check me-1 ms-3"></i>Detailed reports
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card card h-100 border-0 shadow-custom">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-gradient-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-qrcode fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">QR Code Voting</h5>
                        <p class="card-text text-muted">Quick and contactless voting using QR codes for enhanced convenience and social distancing.</p>
                        <div class="feature-benefits">
                            <small class="text-primary">
                                <i class="fas fa-check me-1"></i>Contactless
                                <i class="fas fa-check me-1 ms-3"></i>Quick access
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card card h-100 border-0 shadow-custom">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-gradient-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Role-Based Access</h5>
                        <p class="card-text text-muted">Separate dashboards for students, teachers, and administrators with appropriate permissions.</p>
                        <div class="feature-benefits">
                            <small class="text-success">
                                <i class="fas fa-check me-1"></i>Secure access
                                <i class="fas fa-check me-1 ms-3"></i>User management
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="feature-card card h-100 border-0 shadow-custom">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-gradient-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-mobile-alt fa-2x"></i>
                        </div>
                        <h5 class="card-title fw-bold mb-3">Mobile Responsive</h5>
                        <p class="card-text text-muted">Optimized for all devices - desktop, tablet, and mobile phones for voting on the go.</p>
                        <div class="feature-benefits">
                            <small class="text-info">
                                <i class="fas fa-check me-1"></i>Cross-platform
                                <i class="fas fa-check me-1 ms-3"></i>Touch optimized
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta-section py-5 bg-gradient-primary text-white">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h2 class="display-5 fw-bold mb-3">Ready to Get Started?</h2>
                <p class="lead mb-4">Join thousands of students and faculty members who trust our platform for fair and transparent elections.</p>
                <% if (!user) { %>
                    <div class="cta-buttons">
                        <a href="/auth/register" class="btn btn-light btn-lg me-3">
                            <i class="fas fa-rocket me-2"></i>Start Free Today
                        </a>
                        <a href="/election" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-eye me-2"></i>View Live Elections
                        </a>
                    </div>
                <% } else { %>
                    <div class="cta-buttons">
                        <a href="/election" class="btn btn-light btn-lg me-3">
                            <i class="fas fa-vote-yea me-2"></i>Participate Now
                        </a>
                        <% if (user.role === 'teacher' || user.role === 'admin') { %>
                            <a href="/election/create" class="btn btn-outline-light btn-lg">
                                <i class="fas fa-plus me-2"></i>Create Election
                            </a>
                        <% } %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</section>

<style>
/* Hero Section Styles */
.hero-section {
    background: linear-gradient(135deg, var(--light-color) 0%, #e2e8f0 100%);
    position: relative;
    overflow: hidden;
}

.hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23f1f5f9' fill-opacity='0.5'%3E%3Ccircle cx='5' cy='5' r='1'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.3;
}

.min-vh-75 {
    min-height: 75vh;
}

.hero-content {
    position: relative;
    z-index: 2;
}

.hero-logo {
    max-height: 300px;
    filter: drop-shadow(0 20px 40px rgba(0,0,0,0.1));
}

.hero-stats {
    margin-top: 2rem;
}

.stat-item {
    text-align: center;
}

.stat-number {
    font-size: 2rem;
    font-weight: 700;
    color: var(--primary-color);
    line-height: 1;
}

.stat-label {
    font-size: 0.875rem;
    color: var(--gray-600);
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

/* Floating Elements */
.image-container {
    position: relative;
}

.floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
}

.floating-element {
    position: absolute;
    width: 60px;
    height: 60px;
    background: var(--gradient-primary);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
    animation: float 3s ease-in-out infinite;
}

.element-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
}

.element-2 {
    top: 60%;
    right: 15%;
    animation-delay: 1s;
}

.element-3 {
    bottom: 20%;
    left: 20%;
    animation-delay: 2s;
}

@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(5deg); }
}

/* Features Section */
.features-section {
    background: white;
}

.feature-card {
    transition: all var(--transition-normal);
    border-radius: var(--radius-xl);
}

.feature-card:hover {
    transform: translateY(-10px);
    box-shadow: var(--shadow-xl);
}

.feature-icon {
    transition: all var(--transition-normal);
}

.feature-card:hover .feature-icon {
    transform: scale(1.1) rotate(5deg);
}

.feature-benefits {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--gray-100);
}

/* CTA Section */
.cta-section {
    position: relative;
    overflow: hidden;
}

.cta-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='40' height='40' viewBox='0 0 40 40' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='%23ffffff' fill-opacity='0.1'%3E%3Cpath d='M20 20c0-11.046-8.954-20-20-20v40c11.046 0 20-8.954 20-20z'/%3E%3C/g%3E%3C/svg%3E");
}

.cta-buttons {
    position: relative;
    z-index: 2;
}

@media (max-width: 768px) {
    .hero-stats {
        justify-content: center !important;
    }

    .stat-item {
        margin-bottom: 1rem;
    }

    .hero-logo {
        max-height: 200px;
    }

    .floating-element {
        width: 40px;
        height: 40px;
        font-size: 1rem;
    }
}
</style>

<!-- Quick Actions Section -->
<section class="quick-actions-section py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h3 class="mb-4">Quick Actions</h3>
                <% if (user) { %>
                    <% if (user.role === 'admin') { %>
                        <div class="d-flex justify-content-center">
                            <a href="/admin/dashboard" class="btn btn-primary btn-lg me-3">Admin Dashboard</a>
                            <a href="/admin/elections" class="btn btn-outline-primary btn-lg">Manage Elections</a>
                        </div>
                    <% } else if (user.role === 'teacher') { %>
                        <div class="d-flex justify-content-center">
                            <a href="/teacher/dashboard" class="btn btn-success btn-lg me-3">Teacher Dashboard</a>
                            <a href="/teacher/elections/create" class="btn btn-outline-success btn-lg">Create Election</a>
                        </div>
                    <% } else if (user.role === 'student') { %>
                        <div class="d-flex justify-content-center">
                            <a href="/student/dashboard" class="btn btn-info btn-lg">Go to Student Dashboard</a>
                        </div>
                    <% } %>
                <% } else { %>
                    <div class="d-flex justify-content-center">
                        <a href="/auth/login" class="btn btn-primary btn-lg me-3">Login</a>
                        <a href="/auth/register" class="btn btn-outline-primary btn-lg">Register</a>
                    </div>
                    <div class="mt-3">
                        <a href="/election" class="btn btn-link">View Active Elections</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</section>

<!-- Active Elections Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                </div>
            </div>
        </div>

        <div class="card mt-4 border-0 shadow">
            <div class="card-body p-4">
                <h3 class="mb-3">Active Elections</h3>

                <div class="list-group">
                    <!-- This would normally be populated from the database -->
                    <div class="text-center py-4">
                        <a href="/election" class="btn btn-outline-secondary">View All Elections</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
