<%- include('../partials/header') %>

<div class="container mt-4">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">Elections</li>
    </ol>
  </nav>

  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
          <h4 class="mb-0">
            <i class="fas fa-vote-yea me-2"></i>
            College Elections
          </h4>
          <% if (user && user.role === 'teacher') { %>
            <a href="/teacher/elections/create" class="btn btn-light btn-sm">
              <i class="fas fa-plus"></i> Create Election
            </a>
          <% } %>
        </div>
        <div class="card-body">
          <% if (elections && elections.length > 0) { %>
            <div class="row">
              <% elections.forEach(election => { %>
                <div class="col-md-6 col-lg-4 mb-4">
                  <div class="card h-100 election-card <%= election.status %>">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="card-title"><%= election.title %></h5>
                        <span class="badge bg-<%= election.status === 'active' ? 'success' : election.status === 'pending' ? 'warning' : 'secondary' %>">
                          <%= election.status.toUpperCase() %>
                        </span>
                      </div>

                      <p class="card-text text-muted"><%= election.description %></p>

                      <div class="mb-3">
                        <small class="text-muted">
                          <i class="fas fa-calendar"></i>
                          <%= formatDate(election.startDate) %> - <%= formatDate(election.endDate) %>
                        </small>
                      </div>

                      <div class="mb-3">
                        <small class="text-muted">
                          <i class="fas fa-users"></i>
                          <%= election.candidates ? election.candidates.length : 0 %> candidates
                        </small>
                        <br>
                        <small class="text-muted">
                          <i class="fas fa-vote-yea"></i>
                          <%= election.votes ? election.votes.length : 0 %> votes cast
                        </small>
                      </div>

                      <% if (election.status === 'active') { %>
                        <div class="alert alert-success small py-2">
                          <i class="fas fa-clock"></i>
                          Ends in: <span class="election-countdown" data-target="<%= election.endDate %>"></span>
                        </div>
                      <% } else if (election.status === 'pending') { %>
                        <div class="alert alert-warning small py-2">
                          <i class="fas fa-clock"></i>
                          Starts in: <span class="election-countdown" data-target="<%= election.startDate %>"></span>
                        </div>
                      <% } else if (election.status === 'completed' && election.results.published) { %>
                        <div class="alert alert-info small py-2">
                          <i class="fas fa-trophy"></i>
                          Winner: <%= election.results.winner ? election.results.winner.student.name : 'Not available' %>
                        </div>
                      <% } %>

                      <div class="d-flex justify-content-between">
                        <a href="/election/<%= election._id %>" class="btn btn-primary btn-sm">
                          <i class="fas fa-eye"></i> View Details
                        </a>

                        <% if (user) { %>
                          <% if (user.role === 'student' && election.status === 'active') { %>
                            <% if (!election.hasVoted) { %>
                              <a href="/election/<%= election._id %>/vote" class="btn btn-success btn-sm">
                                <i class="fas fa-vote-yea"></i> Vote Now
                              </a>
                            <% } else { %>
                              <span class="btn btn-secondary btn-sm disabled">
                                <i class="fas fa-check"></i> Voted
                              </span>
                            <% } %>
                          <% } else if (user.role === 'teacher') { %>
                            <a href="/teacher/elections/<%= election._id %>/manage" class="btn btn-outline-primary btn-sm">
                              <i class="fas fa-cog"></i> Manage
                            </a>
                          <% } %>
                        <% } %>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>
            </div>
          <% } else { %>
            <div class="text-center py-5">
              <i class="fas fa-vote-yea fa-4x text-muted mb-4"></i>
              <h4 class="text-muted">No Elections Available</h4>
              <p class="text-muted">There are currently no elections to display.</p>
              <% if (user && user.role === 'teacher') { %>
                <a href="/teacher/elections/create" class="btn btn-primary mt-3">
                  <i class="fas fa-plus"></i> Create Your First Election
                </a>
              <% } %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
