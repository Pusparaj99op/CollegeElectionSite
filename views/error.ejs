<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= typeof title !== 'undefined' ? title : 'Error' %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container mt-5">
      <div class="card border-danger">
        <div class="card-header bg-danger text-white">
          <h2><i class="fas fa-exclamation-circle"></i> <%= typeof title !== 'undefined' ? title : 'Error' %></h2>
        </div>
        <div class="card-body">
          <div class="alert alert-danger">
            <h4><%= typeof message !== 'undefined' ? message : 'An unexpected error occurred' %></h4>
          </div>

          <% if (typeof error !== 'undefined' && error && error.status === 404) { %>
        <div class="text-center mt-4">
          <img src="/images/404.svg" alt="Page Not Found" style="max-width: 300px;">
          <h3 class="mt-3">The page you are looking for does not exist</h3>
        </div>
      <% } %>

      <% if (typeof process !== 'undefined' && process.env.NODE_ENV === 'development' && typeof error !== 'undefined' && error && error.stack) { %>
        <div class="mt-4">
          <h5>Stack Trace:</h5>
          <pre class="bg-light p-3"><code><%= error.stack %></code></pre>
        </div>
      <% } %>

      <div class="mt-4 text-center">
        <a href="/" class="btn btn-primary btn-lg">
          <i class="fas fa-home"></i> Back to Home
        </a>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="/js/main.js"></script>
</body>
</html>
